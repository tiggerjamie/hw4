<div>
<h1><%= @place["name"] %></h1>
<h2>My Entries</h2>
</div>

<div class = "m-5">
<p>
  <a class="btn btn-primary" href="/entries/new?place_id=<%= @place["id"] %>" role="button">New Entry</a>
</p>

<p>
  <a class="btn btn-dark" href="/places" role="button">Back to All Places</a>
</p>
</div>

<div class = "m-3">
<div class = "row">
<% for entry in @entries %>
  <div class = "col-12 col-md-4 p-2">
  <h3><%= entry["title"] %></h3>
  <h4><%= entry["occurred_on"] %></h4>
  <p><%= entry["description"] %></p>
  </div>
  <% end %>

</div>

</div>